{
  "name": "dracula-with-tail",
  "version": "1.0.0",
  "@pika/pack": {
    "pipeline": [
      [
        "@pika/plugin-build-web"
      ],
      [
        "@pika/plugin-simple-bin",
        {
          "bin": "snowpack"
        }
      ]
    ]
  },
  "description": "tailwind theme based on dracula",
  "main": "dracula.with.tail.css",
  "author": "@matheusps",
  "license": "MIT",
  "private": false,
  "scripts": {
    "build:docs": "postcss src/tailwind.css -o docs/public/dracula.with.tail.css",
    "build": "postcss src/tailwind.css -o dracula.with.tail.css",
    "start": "postcss --watch src/tailwind.css -o dracula.with.tail.css",
    "pika": "pika",
    "release": "npm-run-all build build:docs pack",
    "version": "npm run build",
    "test": "exit 1"
  },
  "dependencies": {},
  "devDependencies": {
    "@pika/pack": "^0.5.0",
    "@pika/plugin-build-web": "^0.9.2",
    "@pika/plugin-simple-bin": "^0.9.2",
    "autoprefixer": "^9.7.4",
    "npm-run-all": "^4.1.5",
    "postcss-cli": "^7.1.0",
    "stylelint": "^13.2.1",
    "stylelint-config-standard": "^20.0.0",
    "tailwindcss": "^1.2.0"
  }
}
